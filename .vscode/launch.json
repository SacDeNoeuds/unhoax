{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug current TS file",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--import",
        "tsx"
      ],
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true
    },
  ]
}