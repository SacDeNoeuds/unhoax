{
  "name": "unhoax",
  "version": "0.9.2",
  "description": "type/data-centric schema library. A schema library empower you, not constrain you with their types messy types.",
  "type": "module",
  "files": [
    "./dist",
    "./README.md"
  ],
  "types": "./dist/builder.d.ts",
  "main": "dist/builder.js",
  "exports": {
    "./fp": {
      "types": "./dist/fp.d.ts",
      "default": "./dist/fp.js"
    }
  },
  "scripts": {
    "gen-tests": "npx gen-jet ./src/fp,./src/builder --header 'import { test } from \"vitest\"' --header 'import pipe from \"just-pipe\"' --header 'import assert from \"node:assert\"' --header 'import { x } from \"./main\"'",
    "clean-tests": "rm -rf src/**/*.example.test.*",
    "prebuild": "npm run check-ts && rm -rf ./lib",
    "check-ts": "tsc --noEmit",
    "build": "npx tsup --entry.builder ./src/builder/main.ts --entry.fp ./src/fp/main.ts -d dist/ --dts --sourcemap --format esm --minify",
    "doc:gen": "npx tsx ./src/generate-documentation.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "prepack": "npm run build",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SacDeNoeuds/unhoax.git"
  },
  "keywords": [
    "schema",
    "typescript",
    "type-safe",
    "bundle-size",
    "modular",
    "parsing",
    "assert",
    "check",
    "checker",
    "data",
    "error",
    "inference",
    "json",
    "runtime",
    "type",
    "types",
    "validate",
    "validation",
    "validator"
  ],
  "author": {
    "name": "SacDeNoeuds",
    "email": "sacdenoeuds.dev@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SacDeNoeuds/unhoax/issues"
  },
  "homepage": "https://sacdenoeuds.github.io/unhoax/",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitest/coverage-istanbul": "^3.1.1",
    "generate-jsdoc-example-tests": "^0.2.4",
    "heedoc": "^0.1.0",
    "just-pipe": "^1.0.0",
    "prettier": "^3.5.3",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "@standard-schema/spec": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@standard-schema/spec": {
      "optional": true
    }
  }
}
