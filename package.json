{
  "name": "unhoax",
  "version": "0.9.0",
  "description": "type/data-centric schema library. A schema library empower you, not constrain you with their types messy types.",
  "type": "module",
  "files": [
    "./dist",
    "./README.md"
  ],
  "types": "./dist/main.d.ts",
  "main": "dist/main.cjs",
  "module": "dist/main.js",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "scripts": {
    "prebuild": "npm run check-ts && rm -rf ./lib",
    "check-ts": "tsc --noEmit",
    "build": "npx tsup ./src/main.ts --dts --sourcemap --format cjs,esm --cjsInterop --minify",
    "doc": "typedoc",
    "doc:watch": "typedoc --watch",
    "prepack": "npm run build",
    "test": "vitest",
    "coverage": "vitest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SacDeNoeuds/unhoax.git"
  },
  "keywords": [
    "schema",
    "typescript",
    "type-safe",
    "bundle-size",
    "modular",
    "parsing",
    "assert",
    "check",
    "checker",
    "data",
    "error",
    "inference",
    "json",
    "runtime",
    "type",
    "types",
    "validate",
    "validation",
    "validator"
  ],
  "author": "SacDeNoeuds <sacdenoeuds.dev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SacDeNoeuds/unhoax/issues"
  },
  "homepage": "https://sacdenoeuds.github.io/unhoax/",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitest/coverage-istanbul": "^3.1.1",
    "prettier": "^3.5.3",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.2",
    "typedoc-unhoax-theme": "^0.5.2",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "@standard-schema/spec": "^1.0.0"
  },
  "peerDependenciesMeta": {
    "@standard-schema/spec": {
      "optional": true
    }
  }
}